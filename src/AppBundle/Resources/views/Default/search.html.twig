{% extends "@App/layout.html.twig" %}

{% block title %}Accueil{% endblock title %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.8.11/css/mdb.min.css" rel="stylesheet">
{% endblock stylesheets %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript"
            src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.4/umd/popper.min.js"></script>
    <script type="text/javascript"
            src="https://cdnjs.cloudflare.com/ajax/libs/mdbootstrap/4.8.11/js/mdb.min.js"></script>
{% endblock javascripts %}

{% block nav %}
    <nav class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-0">
        <a class="navbar-brand col-sm-3 col-md-2 mr-0" href="{{path('homepage')}}">Accueil</a>
    </nav>
{% endblock nav %}

{% block content %}
    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
            <tr>
                <th>Type</th>
                <th>Description</th>
                <th>URL</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {% for data in datas.items %}
            <tr>
                <td>{{data.type}}</td>
                <td>{{data.description}}</td>
                <td><a href="{{data.url}}">{{data.url}}</a></td>
                <td><a href="{{path('search_detail', { 'username': data.username, 'repository': data.name })}}"><i class="fas fa-info-circle"></i></a></td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock content %}
